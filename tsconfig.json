{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "Node16",
    "target": "ES2022",
    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
